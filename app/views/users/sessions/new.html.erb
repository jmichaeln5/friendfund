<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="wrapper fadeInDown m-auto">
  <div id="formContent">
    <div class="fadeIn first">
      <div class="container">
        <br>
        <p class="text-3xl"> Welcome BackðŸ‘‹  </p>
        <hr/>
      </div>
    </div>

      <div>
        <button class="btn btn-outline-primary fadeIn second mb-4">
          <div id="sample-login">
              Click Here to Browse
              <br>
              Sample Account
          </div>
        </button>
      </div>


    <div class="field" name="login" placeholder="login" id="login">
      <%= f.email_field :email, autocomplete: 'email', placeholder:' email', class:"fadeIn third widerTextField border border-4  inputText", id:"add-sample-email" %>
    </div>


    <br/>
    <div class="field" id="password" name="login" >
      <%= f.password_field :password, autocomplete: 'password', placeholder:'password', class:"field fadeIn fourth widerTextField border border-4  inputText", id:"add-sample-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <br/>
      <div class="field fadeIn fifth">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions fadeIn sixth">
      <%= f.submit "Log in", id:"formBtn" %>
    </div>
    <% end %>

    <div id="formFooter" class="fadeIn seventh">
      <%= render "users/shared/links" %>
    </div>

  </div>
</div>

<script type="text/javascript">

  $( "#sample-login" ).click(function() {

    // var sampleEmail = "SampleAccount@gmail.com";
    // var samplePassword = "sampleaccount";

    var sampleEmail = "timmytables@gmail.com";
    var samplePassword = "123456";

    $( "#add-sample-email" ).val( sampleEmail );
    $( "#add-sample-password" ).val( samplePassword );
  });
</script>
