<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

<div class="wrapper fadeInDown">
  <div id="formContent">
    <!-- Tabs Titles -->

    <!-- Icon -->
    <div class="fadeIn first">
      <div class="container">
        <br>
        <p class="text-3xl"> Sign Up✍️ </p>
      </div>
    </div>

    <!-- Login Form -->


        <%= f.text_field :name, autocomplete: 'name', placeholder:' full name', class:"field fadeIn second widerTextField border border-4  inputText" %>

        <span class="field">
          <%= f.email_field :email, autocomplete: 'email', placeholder:' email', class:"fadeIn third widerTextField border border-4  inputText" %>
        </span>

        <%= f.text_field :phone_number, autocomplete: "phone number", placeholder:'phone number', class:"field fadeIn fourth widerTextField border border-4  inputText" %>

        <%= f.text_field :username, autocomplete: 'username', placeholder:'username', class:"field fadeIn fifth widerTextField border border-4  inputText" %>


        <%= f.password_field :password, autocomplete: 'password', placeholder:'password', class:"field fadeIn sixth widerTextField border border-4  inputText" %>


        <%= f.password_field :password_confirmation, autocomplete: 'new-password', placeholder:'password confirmation', class:"field fadeIn seventh widerTextField border border-4  inputText" %>


        <% if devise_mapping.rememberable? %>
          <br/>
          <div class="field  fadeIn seventh">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions fadeIn seventh">
          <%= f.submit "Sign Up", id:"formBtn" %>
        </div>
      <% end %>

    <div id="formFooter">
      <%= render "users/shared/links" %>
    </div>

  </div>
</div>
