<% if notification.notifiable.class.to_s == 'FriendRequest' %>

  new <%= link_to " #{notification.notifiable.class.to_s.underscore.humanize.downcase}", notification.notifiable %> from <%= link_to " #{notification.actor.name}", notification.actor %>

<% elsif notification.notifiable.class.to_s == 'Friendship' %>

  <%= link_to " #{notification.actor.name}", notification.actor %> accepted your  friend request


<% else %>

  new <%=" #{notification.notifiable.class.to_s.underscore.humanize.downcase}" %> from <%= link_to " #{notification.actor.name}", notification.actor %>

<% end %>
