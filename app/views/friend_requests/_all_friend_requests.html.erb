<div class="p-4">
  <div class="border-t-2 border-r-2 border-b-2 border-l-4 border-gray-200 p-4">

    <div class="px-4 row justify-content-between text-3xl">
      <span>
        <p class="text-3xl">All Friend Requests</p>
      </span>

      <span>
        <p class="text-3xl"> <%= @friend_requests.count%> Friend Requests</p>
      </span>
    </div>

    <% @friend_requests.each do |friend_request| %>
    <hr>
    <div class="px-4 row justify-content-between">
      <span>
        <br>
        <%= link_to "#{friend_request.requestor.name}", user_path(friend_request.requestor) %> sent a <%= link_to "friend request", friend_request_path(friend_request) %> to <%= link_to "#{friend_request.receiver.name}", user_path(friend_request.receiver) %>
        <br>
        <%= "Request: #{friend_request.status.capitalize}" %>
        <br>
        <span class="text-xs text-gray-800 font-thin"> <%=  "#{time_ago_in_words(friend_request.created_at)}" %> ago</span>

      </span>
      <span class="pt-4">
        <%#= render partial: "friend_requests/as_admin", locals: { friend_request: friend_request, requestor_id: friend_request.requestor.id, receiver_id: friend_request.receiver.id} %>
        <%= render partial: "friend_requests/options_modal", locals: { friend_request: friend_request, requestor_id: friend_request.requestor.id, receiver_id: friend_request.receiver.id} %>
      </span>
    </div>
    <% end %>

  </div>
</div>
