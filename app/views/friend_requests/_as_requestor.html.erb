
<h1>Requested Friend Requests</h1>

<table>
  <thead>
    <tr>
      <th>Friend Request ID</th>
      <th>requestor_id</th>
      <th>receiver_id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friend_requests_as_requestor.each do |friend_request| %>
      <tr>
        <td><%= friend_request.id %></td>
        <td><%= friend_request.requestor_id %></td>
        <td><%= friend_request.receiver_id %></td>
        <td><%= friend_request.status %></td>
        <td><%= link_to 'Show', friend_request %></td>
        <td><%= link_to 'Edit', edit_friend_request_path(friend_request) %></td>
        <td><%= link_to 'Destroy', friend_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
