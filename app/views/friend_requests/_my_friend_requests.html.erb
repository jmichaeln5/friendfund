<div class="p-4">
  <div class="border-t-2 border-r-2 border-b-2 border-l-4 border-gray-200 p-4">
    <div class="px-4 row justify-content-between text-3xl">
        (Sent and/or Recieved) My Friend Requests
      <span>
        <%= current_user.friend_requests.count%> Friend Requests
      </span>
    </div>

    <% current_user.friend_requests.reverse.each do |friend_request| %>
      <hr>
      <br>
      <div class="px-4 row justify-content-between">
        <span>
          <% if (current_user.id == friend_request.requestor_id) %>
          <!-- If current user is requestor -->
            <%= link_to "You", user_path(friend_request.requestor) %> sent a <%= link_to "friend request", friend_request_path(friend_request) %> to <%= link_to "#{friend_request.receiver.name}", user_path(friend_request.receiver) %>
          <% elsif (current_user.id == friend_request.receiver_id) %>
          <!-- If current user is receiver -->
            <%= link_to "#{friend_request.requestor.name}", user_path(friend_request.requestor) %> sent  <%= link_to "You", user_path(friend_request.receiver) %> a <%= link_to "friend request", friend_request_path(friend_request) %>
          <% end %>
          <br>
          <%= "Request: #{friend_request.status.capitalize}" %>
          <p class="text-xs text-gray-800 font-thin"> <%=  "#{time_ago_in_words(friend_request.created_at)}" %> ago</p>

        </span>

        <span class="pt-2">
          <%= link_to 'delete', friend_request, method: :delete, data: { confirm: 'are you sure you would like to delete this friend request?' }, class:"btn btn-outline-danger" %>

          <%= render partial: "friend_requests/options_modal", locals: { friend_request: friend_request, requestor_id: friend_request.requestor.id, receiver_id: friend_request.receiver.id} %>

        </span>
      </div>
    <% end %>

  </div>
</div>
